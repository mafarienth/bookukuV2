<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddPost">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Masukkan Buku" />

        <ImageView
            android:id="@+id/img_post"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/btn_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_post"
            android:layout_centerHorizontal="true"
            android:text="Choose File" />

        <EditText
            android:id="@+id/et_title_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_choose_image"
            android:hint="Judul Buku"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_kontak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_title_post"
            android:hint="Kontak yang bisa dihubungi"
            android:inputType="text" />


        <EditText
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_kontak"
            android:hint="Genre Buku"
            android:inputType="text" />

        <EditText
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/genre"
            android:hint="Status Buku (Tersedia/Tidak)"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_post"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/status"
            android:hint="Deskripsi Buku" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_post"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="add"
            android:text="Add Post"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>